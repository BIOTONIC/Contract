<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <display-name>Contract</display-name>
    <servlet>
        <servlet-name>IndexServlet</servlet-name>
        <servlet-class>com.lovejoy.web.IndexServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>IndexServlet</servlet-name>
        <url-pattern>/IndexServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ToRegister</servlet-name>
        <servlet-class>com.lovejoy.web.ToRegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ToRegister</servlet-name>
        <url-pattern>/ToRegister</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Register</servlet-name>
        <servlet-class>com.lovejoy.web.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Register</servlet-name>
        <url-pattern>/Register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ToLogin</servlet-name>
        <servlet-class>com.lovejoy.web.ToLoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ToLogin</servlet-name>
        <url-pattern>/ToLogin</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>com.lovejoy.web.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>com.lovejoy.web.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/Logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ToNewUser</servlet-name>
        <servlet-class>com.lovejoy.web.ToNewUserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ToNewUser</servlet-name>
        <url-pattern>/ToNewUser</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ToError</servlet-name>
        <servlet-class>com.lovejoy.web.ToErrorServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ToError</servlet-name>
        <url-pattern>/ToError</url-pattern>
    </servlet-mapping>
</web-app>